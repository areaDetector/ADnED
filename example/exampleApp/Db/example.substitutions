
file ADnED.template
{
pattern {P, R, PORT, ADDR, TIMEOUT}
	{BL99:Det:, ADnED:, NED, 0, 5}
}

file NDPluginBase.template {
pattern {P, R, PORT, TIMEOUT, ADDR, NDARRAY_PORT, NDARRAY_ADDR}

        {BL99:Det:, ADnED:Det1:TOF:, DET1.TOF, 1, 0, NED, 0}
        {BL99:Det:, ADnED:Det2:TOF:, DET2.TOF, 1, 0, NED, 0}
        {BL99:Det:, ADnED:Det3:TOF:, DET3.TOF, 1, 0, NED, 0}
        {BL99:Det:, ADnED:Det4:TOF:, DET4.TOF, 1, 0, NED, 0}

	{BL99:Det:, ADnED:Det1:TOF:Array:, DET1.TOF.ARR, 1, 0, DET1.TOF, 0}	
	{BL99:Det:, ADnED:Det2:TOF:Array:, DET2.TOF.ARR, 1, 0, DET2.TOF, 0}	
	{BL99:Det:, ADnED:Det3:TOF:Array:, DET3.TOF.ARR, 1, 0, DET3.TOF, 0}	
	{BL99:Det:, ADnED:Det4:TOF:Array:, DET4.TOF.ARR, 1, 0, DET4.TOF, 0}	

	{BL99:Det:, ADnED:Det1:TOF:ROI1:, DET1.TOF.ROI1, 1, 0, DET1.TOF, 0}	
	{BL99:Det:, ADnED:Det2:TOF:ROI1:, DET2.TOF.ROI1, 1, 0, DET2.TOF, 0}	
	{BL99:Det:, ADnED:Det3:TOF:ROI1:, DET3.TOF.ROI1, 1, 0, DET3.TOF, 0}	
	{BL99:Det:, ADnED:Det4:TOF:ROI1:, DET4.TOF.ROI1, 1, 0, DET4.TOF, 0}

	{BL99:Det:, ADnED:Det1:TOF:Stat1:, DET1.TOF.STAT1, 1, 0, DET1.TOF.ROI1, 0}	
	{BL99:Det:, ADnED:Det2:TOF:Stat1:, DET2.TOF.STAT1, 1, 0, DET2.TOF.ROI1, 0}	
	{BL99:Det:, ADnED:Det3:TOF:Stat1:, DET3.TOF.STAT1, 1, 0, DET3.TOF.ROI1, 0}	
	{BL99:Det:, ADnED:Det4:TOF:Stat1:, DET4.TOF.STAT1, 1, 0, DET4.TOF.ROI1, 0}	
}

