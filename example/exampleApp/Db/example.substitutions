file NDStdArrays.template
{
pattern {P, R, PORT, ADDR, TIMEOUT, TYPE, FTVL, NELEMENTS}
        {BL99:Det:, ADnED:Det1:TOF:Array:, DET1.TOF.ARR, 0, 1, Int32, LONG, 160000}
        {BL99:Det:, ADnED:Det2:TOF:Array:, DET2.TOF.ARR, 0, 1, Int32, LONG, 160000}
        {BL99:Det:, ADnED:Det3:TOF:Array:, DET3.TOF.ARR, 0, 1, Int32, LONG, 160000}
        {BL99:Det:, ADnED:Det4:TOF:Array:, DET4.TOF.ARR, 0, 1, Int32, LONG, 160000}
}

# NCHANS - the size of the time series waveforms.
# HIST_SIZE - not used (set to 1)
# XSIZE, YSIZE - the size of the centroid profile waveforms (set to 1 for TOF plugins)
file NDStats.template
{
pattern {P, R, PORT, ADDR, TIMEOUT, NCHANS, HIST_SIZE, XSIZE, YSIZE}
	{BL99:Det:, ADnED:Det1:TOF:Stat1:, DET1.TOF.STAT1, 0, 1, 1024, 1, 1, 1}
	{BL99:Det:, ADnED:Det2:TOF:Stat1:, DET2.TOF.STAT1, 0, 1, 1024, 1, 1, 1}
	{BL99:Det:, ADnED:Det3:TOF:Stat1:, DET3.TOF.STAT1, 0, 1, 1024, 1, 1, 1}
	{BL99:Det:, ADnED:Det4:TOF:Stat1:, DET4.TOF.STAT1, 0, 1, 1024, 1, 1, 1}
}

